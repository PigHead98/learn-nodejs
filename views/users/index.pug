extends ../layouts/layout

block content
    h1 Users
    div.list-service.d-flex.justify-content-between.align-items-center.mb-3
        a.btn.btn-primary(href="/users/create") create
        form.mb-0(action="/users/search", method="GET")
            input(name="name")

            button Search
    div.list-user
        table.table
            tr
                th Name
                th Phone
                th Actions
            each user in users
                tr
                    td= user.name
                    td= user.phone
                    td
                        a.btn.btn-success(href="/users/" + user.id) view