extends ../layouts/layout

block content
    if errors
        each error in errors
            .alert.alert-danger(role='alert')= error
    form(action="/users/create", method="POST", enctype="multipart/form-data")
        div.form-group.row
            div.col-12.text-center
                h2 Create new user
            div.col-5.mx-auto
                label(for="inputName") Name
                input(type="text", name='name' , class="form-control", id="inputName", value= data ? data.name : "")

                label(for="inputPhone") Phone
                input(type="text", name='phone' , class="form-control", id="inputPhone", value= data ? data.phone : "")

                label(for="inputImage") Image
                input(type="file", name='image' , class="form-control-file", id="inputImage")

                button.mt-2(type="submit" class="btn btn-primary") add